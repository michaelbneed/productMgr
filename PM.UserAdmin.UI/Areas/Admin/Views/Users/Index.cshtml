@model IEnumerable<PM.Entity.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>

<p>
	<a asp-action="Create" title="Add a new User"><i class="material-icons">add</i>Add User</a>
</p>
<table class="table table-striped" style="width:100%">
	<thead>
		<tr>
			<th>
				First Name
			</th>
			<th>
				Last Name
			</th>
			<th>
				Email
			</th>
			<th>
				@Html.DisplayNameFor(model => model.AuthId)
			</th>

			<th>
				@Html.DisplayNameFor(model => model.Supplier)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.FirstName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LastName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EmailAddress)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.AuthId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Supplier.SupplierName)
				</td>
				<td>
					<a asp-action="Edit" title="Edit" asp-route-id="@item.Id"><i class="material-icons">update</i></a>
					<a asp-action="Details" title="Details" asp-route-id="@item.Id"><i class="material-icons">link</i></a>
					<a asp-action="Delete" title="Delete" asp-route-id="@item.Id"><i class="material-icons">remove_circle_outline</i></a>
				</td>
			</tr>
		}
	</tbody>
</table>

@using PM.Business.Dto
@model PM.Entity.Models.Request

@{
    ViewData["Title"] = "Details";
}

<h1>Request</h1>

<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			Request (RequestId)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.RequestDescription) (@Html.DisplayFor(model => model.Id))
		</dd>
		<dt class="col-sm-2">
			Date
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CreatedOn)
		</dd>
		<dt class="col-sm-2">
			Requester
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CreatedBy)
		</dd>
		<dt class="col-sm-2">
			Updated
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.UpdatedOn)
		</dd>
		<dt class="col-sm-2">
			User
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.UpdatedBy)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Product)
		</dt>
		<dd class="col-sm-10">
			<a asp-controller="Products" asp-action="Details" asp-route-id="@Model.ProductId">@Html.DisplayFor(model => model.Product.ProductName)</a>
		</dd>
		<dt class="col-sm-2">
			Type
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.RequestType.RequestTypeName)
		</dd>
		<dt class="col-sm-2">
			Status
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.StatusType.StatusTypeName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Supplier)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Supplier.SupplierName)
		</dd>
		<dt class="col-sm-2">
			Supervisor
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Store.StoreSupervisorName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Store)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Store.StoreName)
		</dd>
	</dl>
</div>
<div>
	@if (@Model.StatusTypeId == 1 && UserDto.Role == "Employee")
	{
		<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary border-right-0">Edit</a>
	}
	else if (UserDto.Role != "Employee")
	{
		<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary border-right-0">Edit</a>
	}
	
	@if (ViewData["NoteId"] == null)
	{
		<a asp-controller="Notes" asp-action="CreateNote" asp-route-id="@Model.Id" class="btn btn-warning">Add Note</a>
	}
	else
	{
		<a asp-controller="Notes" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-warning">Notes</a>
	}

	@if (@Model.ProductId == null)
	{
		<a asp-controller="Products" asp-action="CreateProduct" asp-route-id="@RequestDto.RequestId" class="btn btn-success">Add Product</a>
	}
	else
	{
		<a asp-controller="Products" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-success">View Product</a>
	}

	<br />
	<a asp-action="Index">Back to Request List</a>
</div>

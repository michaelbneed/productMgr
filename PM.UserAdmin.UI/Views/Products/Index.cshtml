@model IEnumerable<PM.Entity.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
	<a asp-action="CreateProduct" title="Add a new Product"><i class="material-icons">add</i>Add Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Description
            </th>
            <th>
                UPC
            </th>
            <th>
                Product Location
            </th>
            <th>
                Product Cost
            </th>
            <th>
                Units Per Case
            </th>
            <th>
                Retail Price
            </th>
            <th>
                Package Size
            </th>
            <th>
                Container Size Type
            </th>
            <th>
                Order Week
            </th>
	        <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Upccode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitsPerCase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PackageSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContainerType.ContainerTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderWeek)
            </td>
	        <td>
		        <a asp-action="Edit" title="Edit" asp-route-id="@item.Id"><i class="material-icons">update</i></a> 
		        <a asp-action="Details" title="Details" asp-route-id="@item.Id"><i class="material-icons">link</i></a> 
		        <a asp-action="Delete" title="Delete" asp-route-id="@item.Id"><i class="material-icons">remove_circle_outline</i></a>
	        </td>
        </tr>
}
    </tbody>
</table>
